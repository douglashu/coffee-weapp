/* index.wxss */
.container-fluid{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.logo{
  width: 40%;
  height: 27%;
  position: absolute;
  top: 18%;
  left: 50%;
  margin-left: -20%;
}
.indexpage{  
  width: 50%;
  position: absolute;
  bottom: 15%;
  left: 50%;
  margin-left: -25%;
}
.indexpage > view{
  color: #fff;
  font-size: 40rpx;
  text-align: center;
}
.indexpage > navigator {
  background: none;
  border: 2rpx solid #fff;
  color: #fff;
  margin-top:80rpx;
  display:block;
  padding:0rpx 28rpx;
  box-sizing:border-box;
  font-size:18px;
  text-align:center;
  text-decoration:none;
  line-height:2.55555556;
  border-radius:5px;
  overflow:hidden;
}