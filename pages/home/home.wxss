/* home.wxss */
/*焦点图*/
swiper{
  width: 100%;
}
/* 会员卡 */
.membercard{
  color: #fff;
  background-color: transparent;
  border-radius: 8rpx;
  position: relative;
  overflow: hidden;
}
.membercard-bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: auto;
  z-index: -1;
  display: block;
}
.card-name{
  font-size: 36rpx;
  font-weight: bold;
  line-height: 60rpx;
  margin-bottom: 10rpx;
}
.card{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items:center;
}
.card-text{
  font-size: 28rpx;
}
.getcard{
  margin-right:10rpx;
}
.getcard-btn{
  color: #fff;
  font-size: 36rpx;
  line-height:1.8;
  border: 2rpx solid #fff;
  background-color:transparent;
  display:block;
  margin-left:unset;
  margin-right:unset;
  padding-left:50rpx;
  padding-right:50rpx;
}
/*优惠券*/
.scrollview{
  padding: 0
}
.scroll-x{
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  align-items:flex-start;
  width: 100%;
  height:204rpx;
  overflow: hidden;
}
.scroll-view{
  width: 400rpx;
  height: 200rpx;
  display: inline-block;
  background-color: #fff;
  border: 1px solid #e8e0db;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 10rpx;
  position: relative;
  z-index: 1
}
.coupon-img{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}
.coupon-cont{
  width: 100%;
  height: 132rpx;
  color: #fff;
  display: flex;
  justify-content:center;
  align-items:center;
  position: relative;
  z-index: 1;
}
.coupon-price{
  display: inline-block;
}
.coupon-text{
  display: inline-block;
}
.coupon-price{
  margin-right: 6rpx;
}
.coupon-name{
  font-size: 32rpx;
  font-weight:bold;
  display: block;
  text-align: center;
}
.coupon-desc{
  font-size: 20rpx;
  display: block;
  text-align: center;
}
.coupon-price-symbol{
  font-size: 24rpx;
}
.coupon-price-value{
  font-size: 72rpx;
  font-weight: bold;
}
.coupon-date{
  display: flex;
  align-items:center;
  justify-content: space-between;
  padding:0rpx 10rpx;
}
.coupon-date-txt{
  display: inline-block;
  font-size: 28rpx;
  color: #919191;
}
.coupon-date-btn{
  display: inline-block;
  padding: 10rpx;
  border: 0;
  line-height: 1;
  background-color: #f5f3f2;
  color: #ac9079;
  margin: 0;
  font-size: 28rpx;
  border-radius:20rpx;
}
.coupon-date-btn::after{
  border:1px solid rgba(0, 0, 0, 0);
}
/*广告图*/
.adv{
  padding: 0;
  overflow: hidden;
  border-radius: 8rpx;
  font-size: 0;
  line-height: 0;
}
/*推荐产品*/
.reclist{
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
  white-space: nowrap;
  height: 250rpx;
}
.prolist{
  display: inline-block;
  width: 240rpx;
  height: 250rpx;
  white-space: initial;
  text-align: center;
  font-size: 28rpx;
  color: #626262;
  margin-right: 20rpx;
  overflow: hidden
}
.prolist-txt{
  display: block;
  margin-top: 10rpx;
}
/*品牌故事*/
.brand{
  margin: 20rpx 0;
}
.brandvideo{
  width: 100%;
  height: 400rpx;
}
.brand-profile{
  font-size: 28rpx;
  line-height: 1.8;
  margin: 20rpx 0;
  display: block;
}
.brand-usp{
  color: #626262;
  border-top: 2rpx solid #f5f3f2;
  border-bottom: 2rpx solid #f5f3f2;
  padding: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-around;
}
.icon-wifibicon,
.icon-tingchewei,
.icon-wuyanfang,
.icon-baoxiang{
  font-weight: normal;
  font-size: 40rpx;
  margin-right: 10rpx;
}
.wifi{
  display: flex;
  flex-flow: row nowrap;
  align-items:flex-end;
  justify-content: space-between;
  font-size: 28rpx;
  line-height: 1.8;
  margin: 20rpx 0;
}
.onekeycopy{
  margin: 0;
  padding: 10rpx 20rpx;
  line-height: 1;
  font-size: 28rpx;
  border-radius: 8rpx;
}